<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/list_item_margin"
    android:layout_marginBottom="@dimen/list_item_margin"
    android:background="@color/white">

    <TextView
        android:id="@+id/message_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextMessage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:paddingLeft="@dimen/message_left_padding"
        android:paddingStart="@dimen/message_left_padding"/>

    <Button
        android:id="@+id/view_message_button"
        style="@style/MessageButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="View Message" />

</RelativeLayout>
