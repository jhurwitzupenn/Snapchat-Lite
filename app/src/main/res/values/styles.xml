<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ImageButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/red</item>
        <item name="android:padding">@dimen/image_button_padding</item>
        <item name="android:layout_margin">@dimen/image_button_layout_margin</item>
    </style>

    <style name="SignInButton">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/maroon</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">@dimen/signin_button_padding</item>
        <item name="android:layout_marginTop">@dimen/signin_button_margin_top</item>
    </style>

    <style name="MessageButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/maroon</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingLeft">5dp</item>
    </style>

    <style name="TextMessage">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="TextMemory">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="TextLabel">
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="colorAccent">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
    </style>


    <style name="TextWelcome">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="SpinnerTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">start</item>
        <item name="android:padding">5dp</item>
    </style>

</resources>
